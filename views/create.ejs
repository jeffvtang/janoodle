  <body>
    <section id='forms-container'>
    <article >
          <header>
            <h3 class='headerText'> JANoodle</h3>
          </header>

          <div class ='mainArea'>
            <h2>Event Details</h2>
            <form action="/poll" method="POST">
                <input name="eventName" class='forms' type='text' placeholder='event name' value= "<%=eventTitle%>" />
                <br>
                <input name='eventStartDate' class="forms" type='date' placeholder='Date'>
                <input name='eventEndDate' class="forms" type='date' placeholder='Date'>
                <br>
                <input name='eventDescription' class="forms" type='text' placeholder='Description'>
                <br>
                <input name='ceatorName' class="forms" type='text' placeholder="What's your name?">
                <br>
                <input name='creatorEmail' class="forms" type='email' placeholder="What's your email?">
                <br>
                <button type='submit' class='submit'>Submit my poll</button>
            </form>
          </div>
   
        </article>
    </section>

</body>
