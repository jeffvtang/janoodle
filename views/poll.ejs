<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="JANoodle" content="an app for scheduling events">
    <meta name="author" content="Jeff Tang, Abraham Prince, Noah Birenbaum">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
 <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">


    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <!-- FONT -->
    <link href="https://fonts.googleapis.com/css?family=Song+Myung" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <title>JANoodle!</title>
  </head>
<body>

<section id='forms-container'>
          <header>
            <h3 class='headerText'> JANoodle</h3>
          </header>
             <div class =information>
                <h1>Email the link up top to any friends you want to have at this event</h1> </div>
             <div class ='mainArea'>
            <h2><%=eventInfo[0].name%></h2>
            <h3><%=eventInfo[0].description%></h3>
            <h3><%=eventInfo[0].creator_name%> - <%=eventInfo[0].creator_email%></h3>

            <table>
            <tr>
              <td></td>
              <% timeInfo.forEach(function(timeSlot) { %>
              <td><%= timeSlot.start.toLocaleDateString() %> to <%=timeSlot.end.toLocaleDateString()%></td>
              <% }) %>

            </tr>
            
            

            <tr>
            <td id='totalCounter'>
                <span><i class="fas fa-plus"></i></span> New Participant
            </td>          
                <% timeInfo.forEach(function(slotSum) { %>
              
              <td><i class="fas fa-check trueHandler"></i><%=slotSum.count%></td>
              <% }) %>
            </tr>
                      
            <% for (var element in attendeeInfo) { %>
            <tr> 
              <td class="user"><%= attendeeInfo[element].name %></td>
              <% attendeeInfo[element].avail.forEach(function(availStatus, i) { %>
                <% if (availStatus == true)   {%>
                <td> <i data-id="<%=  attendeeInfo[element].id + '-' + attendeeInfo[element].timeID[i] %>" class="fas fa-check trueHandler"></i></td>
                <% }else if (availStatus == false) { %>
                <td> <i data-id="<%=  attendeeInfo[element].id + '-' + attendeeInfo[element].timeID[i] %>" class="fas fa-times falseHandler"></i></td>
              <%}}) %>
            </tr>
            <% } %>
            
            </table>
            
<p></p>

            <table class="pollTable">
        <thead>
          <tr>
            <th></th>
            <th>Date 1</th>
            <th>Date 2</th>
            <th>Date 3</th>
          </tr>

          <tr>
            <td id='totalCounter'>
                # participants
                <div class="addRow"><i class="fas fa-plus"></i></div>
            </td>
            <td><i class="fas fa-check"></i></td>
            <td><i class="fas fa-check"></i>#ofticks</td>
            <td><i class="fas fa-check"></i>#ofticks</td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>user 1</td>
            <td><i class="fas fa-check"></i></td>
            <td><i class="fas fa-check"></i></td>
            <td><i class="fas fa-check"></i></td>
          </tr>
          <tr>
            <td>user 2</td>
            <td><i class="fas fa-check"></i></td>
            <td><i class="fas fa-check"></i></td>
            <td><i class="fas fa-check"></i></td>
             </tr>
        </tbody>
      </table>

        </div>
          <footer>
          </footer>
    </section>
</body>
